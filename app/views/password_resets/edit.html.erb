<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@seller, url: password_reset_path(params[:id])) do |f| %>
        <% if @seller.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this category from being saved:</h2>

              <ul>
                <% @seller.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <%= hidden_field_tag :email, @seller.email %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>