<p id="notice"><%= notice %></p>
<%	if logged_id? %>
    <%=	 link_to 'Log Out', login_path, method: :delete %>
    <%=  link_to 'Me Markit', seller_path(session[:seller_id]) %>
    <%	 else %>
    <%=	 link_to 'Log In', login_path %>
    <%=	 link_to 'Seller sign up', signup_path %>
<%	 end %>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= image_tag category.name.downcase %></td>
        <td><%= link_to category.name, category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

